<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="100"
    android:background="@drawable/duketall"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/CB_Slot_0"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:alpha="50"
                    android:backgroundTint="?android:attr/textColorTertiaryInverse"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="@color/purple_500"
                    android:buttonTintMode="src_in"
                    android:foregroundTint="@color/material_on_surface_disabled"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/CB_Slot_0_Path"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:alpha="200"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/CB_Slot_1"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:alpha="50"
                    android:backgroundTint="?android:attr/textColorTertiaryInverse"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="@color/purple_500"
                    android:buttonTintMode="src_in"
                    android:foregroundTint="@color/material_on_surface_disabled"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/CB_Slot_1_Path"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:alpha="200"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/CB_Slot_2"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:alpha="50"
                    android:backgroundTint="?android:attr/textColorTertiaryInverse"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="@color/purple_500"
                    android:buttonTintMode="src_in"
                    android:foregroundTint="@color/material_on_surface_disabled"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/CB_Slot_2_Path"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:alpha="200"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/CB_Slot_3"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:alpha="50"
                    android:backgroundTint="?android:attr/textColorTertiaryInverse"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="@color/purple_500"
                    android:buttonTintMode="src_in"
                    android:foregroundTint="@color/material_on_surface_disabled"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/CB_Slot_3_Path"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:alpha="200"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/CB_Slot_4"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:alpha="50"
                    android:backgroundTint="?android:attr/textColorTertiaryInverse"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="@color/purple_500"
                    android:buttonTintMode="src_in"
                    android:foregroundTint="@color/material_on_surface_disabled"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/CB_Slot_4_Path"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:alpha="200"
                    android:textColor="@color/white" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/CB_Slot_5"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:alpha="50"
                    android:backgroundTint="?android:attr/textColorTertiaryInverse"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="@color/purple_500"
                    android:buttonTintMode="src_in"
                    android:foregroundTint="@color/material_on_surface_disabled"
                    android:shadowColor="@color/black"
                    android:shadowRadius="5"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/CB_Slot_5_Path"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:alpha="200"
                    android:textColor="@color/white" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>